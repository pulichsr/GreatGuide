<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_80"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/dlg_tour_addon_tourname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/undefined"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/dlg_tour_addon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dlg_tour_addon_tourname"
            android:layout_marginLeft="@dimen/padding_medium"
            android:text="@string/tour_addon_title"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />

        <Button
            android:id="@+id/dlg_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/undefined"
            android:textColor="@color/white" />
    </RelativeLayout>
    <!--
    <fragment
        android:id="@+id/dlg_hire_period_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.greatguide.ui.fragment.DialogTitleFragment"
        tools:layout="@layout/fragment_dlg_title_row" />
    -->

    <ListView
        android:id="@+id/dlg_tour_addon_poi_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:layout_marginRight="@dimen/padding_medium"
        android:layout_marginLeft="@dimen/padding_medium"
        android:divider="@null"
        tools:listitem="@layout/list_item_tour_addon" >
        
    </ListView>

</LinearLayout>