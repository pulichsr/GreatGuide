<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/ServiceTestStatus"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:text="--"
        />

    <Button
            android:id="@+id/btnServiceTestPlay"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="--" />

    <Button
            android:id="@+id/btnServiceTestStop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="--" />

    <Button
            android:id="@+id/btnServiceTestPause"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="--" />

    <Button
            android:id="@+id/btnServiceTestIncreaseVolume"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="--" />

    <Button
            android:id="@+id/btnServiceTestDecreaseVolume"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="--" />

    <Button
            android:id="@+id/btnServiceTestRepeat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="--" />
</LinearLayout>