<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_80"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/dlg_starttour_tourname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_large"
            android:text="@string/undefined"
            android:textColor="@color/white"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/dlg_starttour_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dlg_starttour_tourname"
            android:layout_marginLeft="@dimen/padding_medium"
            android:text="@string/undefined"
            android:textColor="@color/white"
            android:textSize="@dimen/font_title" />

        <Button
            android:id="@+id/dlg_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/undefined"
            android:textColor="@color/white" />
    </RelativeLayout>
    <!--
    <fragment
        android:id="@+id/dlg_hire_period_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.greatguide.ui.fragment.DialogTitleFragment"
        tools:layout="@layout/fragment_dlg_title_row" />
    -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@android:color/transparent" >

                <TextView
                    android:id="@+id/dlg_starttour_distance_to_start_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:layout_marginTop="@dimen/padding_large"
                    android:gravity="left|top"
                    android:text="@string/tour_start_distance_to_start"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/dlg_starttour_distance_to_start_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dlg_starttour_distance_to_start_label"
                    android:layout_below="@+id/dlg_starttour_distance_to_start_label"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="left|top"
                    android:text="@string/undefined"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large" />

                <Button
                    android:id="@+id/dlg_starttour_distance_to_start_details_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/dlg_starttour_distance_to_start_label"
                    android:layout_marginRight="@dimen/padding_medium" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="@android:color/transparent" >

                <TextView
                    android:id="@+id/dlg_starttour_distance_to_nearest_map_point_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="left|top"
                    android:text="@string/tour_start_distance_to_nearest_map_point"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/dlg_starttour_distance_to_nearest_map_point_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dlg_starttour_distance_to_nearest_map_point_label"
                    android:layout_below="@+id/dlg_starttour_distance_to_nearest_map_point_label"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="left|top"
                    android:text="@string/undefined"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large" />

                <Button
                    android:id="@+id/dlg_starttour_distance_to_nearest_map_point_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/dlg_starttour_distance_to_nearest_map_point_label"
                    android:layout_marginRight="@dimen/padding_medium" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dlg_starttour_at_the_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dlg_starttour_at_the_end_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_medium"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="left|top"
                    android:text="@string/tour_start_at_the_end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/dlg_starttour_at_the_end_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_medium"
                    android:layout_marginLeft="@dimen/padding_medium"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="left|top"
                    android:text="@string/undefined"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large" />
            </LinearLayout>

            <TextView
                android:id="@+id/dlg_starttour_narrative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_medium"
                android:layout_marginLeft="@dimen/padding_medium"
                android:layout_marginRight="@dimen/padding_medium"
                android:layout_marginTop="@dimen/padding_large"
                android:gravity="left|top"
                android:text="@string/undefined"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>